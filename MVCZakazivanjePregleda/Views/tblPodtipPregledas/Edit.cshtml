@model MVCZakazivanjePregleda.Models.tblPodtipPregleda

@{
    ViewBag.Title = "Edit";
}

<h2>Modifikacija podtipa pregleda</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.podtipPregledaID)

        <div class="form-group">
            @Html.LabelFor(model => model.nazivPodtipaPregleda, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nazivPodtipaPregleda, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nazivPodtipaPregleda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tipPregledaID, "tipPregledaID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("tipPregledaID", null, "izaberite", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipPregledaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sačuvaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Lista podtipova pregleda", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
